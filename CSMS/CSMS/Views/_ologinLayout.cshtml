<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/css/officerLogin.css" rel="stylesheet" />
    </environment>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <div id="officerlogin">
            <div class="demo">
                <h2>Login</h2>
                <form action="Verify" method="POST">
                    <input type="text" name="empid" placeholder="Employee ID" /> <br />
                    <input type="password" name="password" placeholder="Password" /> <br />
                    <input type="submit" name="login" value="LOGIN" />
                    <br />
                    <span style="font-size:13px">Not Registered? <a asp-area="" asp-controller="Officers" asp-action="officer_reg">Sign Up</a></span>
                </form>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>


